<h2>Your Pragmatic Cart</h2>

<table width="90%">
  <tr>
    <td>数量</td>
    <td>名称</td>
    <td>总价</td>
  </tr>
  <% @cart.line_items.each do |item| %>
  <tr>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item.product.title %>
    </td>
    <td class="item_price">
      <%= number_to_currency(item.total_price) %>
    </td>
  </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell">
      <%= number_to_currency(@cart.total_price) %>
    </td>
  </tr>
</table>

<%= button_to 'Empty', 
                      @cart, method: 
                      :delete, data: { confirm: 'Are you sure?' }  %>
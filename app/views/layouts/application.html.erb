<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag 'depot', :media => 'all' %>
  <%= javascript_include_tag "defaults" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragprog Books Online Store" %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart %>
      </div>
      <a href="#">home</a><br />
      <a href="#">Questions</a><br />
      <a href="#">News</a><br />
      <a href="#">Contacts</a>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
